{
  "compilerOptions": {
    "module": "commonjs",
    "lib": [
      "es2017"
    ],
    "esModuleInterop": true,
    "noImplicitAny": true,
    "declaration": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "typeRoots": [
      "node_modules/@types"
    ],
    "noEmit": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "scripts",
    "test"
  ]
}
